@model LTWeb08_Bai03.Models.Employee

@{
    ViewBag.Title = "Sửa thông tin nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-3">
        <form action="@Url.Action("Sua", "Employee")" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="card shadow-sm p-3 rounded-3">
                <h2 class="fw-bold">SỬA THÔNG TIN NHÂN VIÊN</h2>

                <div class="mb-3">
                    <label class="form-label">Name</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control w-100" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Nam", "Nữ" }, Model.Gender), new { @class = "form-select w-100" })
                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label">City</label>
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control w-100" })
                    @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label">DeptId</label>
                    @Html.DropDownListFor( m => m.DeptId, new SelectList(ViewBag.DeptId, "Value", "Text", Model.DeptId), "Select Department", new { @class = "form-select w-100", @required = "required" })
                    @Html.ValidationMessageFor(m => m.DeptId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Image</label>
                    @Html.HiddenFor(m => m.Image)
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <p class="mt-3">Ảnh hiện tại: <img src="~/Images/@Model.Image" width="100" /></p>
                    }
                    @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">Update</button>
                </div>
            </div>
        </form>
    </div>

    <div class="container mt-3">
        <a href="@Url.Action("DS_Employee", "Employee")" class="text-decoration-none">Back to List</a>
    </div>
</body>
</html>
