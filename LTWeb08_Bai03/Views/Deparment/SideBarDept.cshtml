
@{
    ViewBag.Title = "SideBar phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-4">
                <div class="shadow-sm border rounded-3 overflow-hidden">
                    <div class="py-2 px-3 fw-bold text-bg-success">
                        <h6 class="mb-0">DANH SÁCH PHÒNG BAN</h6>
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var pb in Model)
                        {
                            <a href="@Url.Action("EmployeesByDept", "Deparment", new { id = pb.DeptId })" class="list-group-item list-group-item-action border-bottom">
                                @pb.Name
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-8 text-muted mt-3">
                <p>Hãy chọn một phòng ban ở danh sách bên trái để xem danh sách nhân viên.</p>
            </div>
        </div>
    </div>
</body>
</html>

